{
  "name": "obs-plugin-ai-assistant",
  "displayName": "OBS Plugin AI Assistant",
  "description": "AI-powered assistant for OBS Studio plugin development with automatic context injection and build automation",
  "version": "1.0.0",
  "publisher": "trae-ai",
  "author": {
    "name": "Zhu Yu",
    "email": "mike.zhuyu@gmail.com"
  },
  "engines": {
    "vscode": "^1.74.0",
    "trae": "^1.0.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other",
    "Extension Packs",
    "Debuggers"
  ],
  "keywords": [
    "obs",
    "plugin",
    "c++",
    "cmake",
    "ai",
    "assistant",
    "build",
    "automation"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "obs.configure",
        "title": "Configure CMake Build System",
        "category": "OBS Plugin"
      },
      {
        "command": "obs.build",
        "title": "Build Plugin with CMake Preset",
        "category": "OBS Plugin"
      },
      {
        "command": "obs.clean",
        "title": "Clean Build Artifacts",
        "category": "OBS Plugin"
      },
      {
        "command": "obs.fix-error",
        "title": "Fix Build Errors with AI",
        "category": "OBS Plugin"
      },
      {
        "command": "obs.show-config",
        "title": "Show Plugin Configuration",
        "category": "OBS Plugin"
      },
      {
        "command": "obs.init-template",
        "title": "Initialize OBS Plugin Template",
        "category": "OBS Plugin"
      },
      {
        "command": "obs.run-tests",
        "title": "Run Plugin Tests",
        "category": "OBS Plugin"
      },
      {
        "command": "obs.commit",
        "title": "Auto-commit Changes",
        "category": "OBS Plugin"
      }
    ],
    "keybindings": [
      {
        "command": "obs.build",
        "key": "cmd+shift+b",
        "mac": "cmd+shift+b",
        "when": "resourceExtname == .cpp || resourceExtname == .hpp"
      },
      {
        "command": "obs.fix-error",
        "key": "cmd+shift+f",
        "mac": "cmd+shift+f",
        "when": "resourceExtname == .cpp || resourceExtname == .hpp"
      }
    ],
    "configuration": {
      "title": "OBS Plugin AI Assistant",
      "properties": {
        "obsPlugin.autoDetectConfig": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect and load .obspluginrc.json configuration"
        },
        "obsPlugin.autoCommit": {
          "type": "boolean",
          "default": true,
          "description": "Automatically commit changes after successful builds"
        },
        "obsPlugin.aiContextInjection": {
          "type": "boolean",
          "default": true,
          "description": "Automatically inject OBS plugin context into AI prompts"
        },
        "obsPlugin.conventionValidation": {
          "type": "boolean",
          "default": true,
          "description": "Validate coding conventions during build"
        },
        "obsPlugin.defaultPlatform": {
          "type": "string",
          "enum": [
            "macos",
            "windows",
            "linux"
          ],
          "default": "macos",
          "description": "Default platform for build operations"
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": ".obspluginrc.json",
        "url": "./schemas/obspluginrc.schema.json"
      }
    ]
  },
  "activationEvents": [
    "workspaceContains:.obspluginrc.json",
    "workspaceContains:CMakePresets.json",
    "onCommand:obs.init-template"
  ],
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTests.js",
    "package": "npx vsce package",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "chokidar": "^3.5.3",
    "glob": "^8.1.0",
    "yaml": "^2.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trae-ai/obs-plugin-ai-assistant.git"
  },
  "bugs": {
    "url": "https://github.com/trae-ai/obs-plugin-ai-assistant/issues"
  },
  "homepage": "https://github.com/trae-ai/obs-plugin-ai-assistant#readme",
  "license": "MIT",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "qna": "marketplace",
  "extensionDependencies": [],
  "badges": [
    {
      "url": "https://img.shields.io/badge/License-MIT-yellow.svg",
      "href": "https://opensource.org/licenses/MIT",
      "description": "License"
    }
  ]
}
